{
  "exclude": ["node_modules", "dist", "tmp"],
  "compilerOptions": {
    "outDir": "./tmp/dist",

    // Modules
    //
    "moduleResolution": "node",
    "module": "esnext",
    "resolveJsonModule": false,

    // JavaScript Support
    //
    "allowJs": true,

    // Emit
    //
    "alwaysStrict": true,
    "sourceMap": true,
    "noEmitOnError": true,

    // Interop Constraints
    //
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    // Type Checking
    //
    "noImplicitAny": true,
    "strict": true,
    "strictNullChecks": true,

    // Completeness
    //
    "skipLibCheck": true,
    "diagnostics": true,

    "typeRoots": ["./node_modules/@types", "./node_modules/nodejs-package-types/typings"]
  }
}
