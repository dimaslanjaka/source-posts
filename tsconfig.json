{
  "extends": "./tsconfig.base",
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "compilerOptions": {
    "lib": [
      "es2020",
      "DOM"
    ],
    "target": "ES2020",
    "declaration": true,
    "declarationDir": "./tmp/declaration",
    "outDir": "./tmp/src-posts",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/node_modules"
  ],
  "typeAcquisition": {
    "enable": true
  }
}